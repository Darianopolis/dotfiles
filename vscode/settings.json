{
    "workbench.sideBar.location": "right",
    "security.workspace.trust.untrustedFiles": "open",
    "git.openRepositoryInParentFolders": "always",
    "clangd.arguments": [
        "--function-arg-placeholders=0",
        // "--experimental-modules-support",
        "--header-insertion=never"
    ],
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": false,
    "files.associations": {
        ".slang": "slang",
        "*.slang": "slang",
        ".clang-tidy": "yaml",
        ".clangd": "yaml"
    },
    "window.titleBarStyle": "custom",
    "vscode-blur-linux.opacity": 90,
    "editor.fontFamily": "Noto Sans Mono",
    "cmake.showOptionsMovedNotification": false,
    "slang.format.clangFormatLocation": "",
    "slang.format.clangFormatStyle": "",
    "Lua.runtime.version": "Lua 5.1",
    "Lua.runtime.builtin": {
        "basic": "disable",
        "debug": "disable",
        "io": "disable",
        "math": "disable",
        "os": "disable",
        "package": "disable",
        "string": "disable",
        "table": "disable",
        "utf8": "disable"
    },
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "workbench.startupEditor": "none",
    "chat.commandCenter.enabled": false,
    "extensions.ignoreRecommendations": true,
    "[markdown]": {
        "diffEditor.ignoreTrimWhitespace": true
    },
    "files.eol": "\n",
    "C_Cpp.intelliSenseEngine": "disabled",
    "zig.zls.enabled": "on",
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "editor.fontSize": 16,
    "workbench.colorCustomizations": {
        "[Default Dark Modern]": {

            // FG.Primary = #A9B7C6

            // BG.Primary   = #232525
            // BG.Secondary = #1d1f1f
            // BG.Tertiary  = #1a1d1d

            "editor.foreground": "#A9B7C6" /* FG.Primary */,
            "editor.background": "#232525" /* BG.Primary */,

            // "menu.background":   "#232525" /* BG.Primary */,

            // "titleBar.activeBackground":   "#1a1d1d" /* BG.Tertiary */,
            // "titleBar.inactiveBackground": "#1a1d1d" /* BG.Tertiary */,
            // "activityBar.background":      "#1a1d1d" /* BG.Tertiary */,

            // "sideBar.background":     "#1a1d1d" /* BG.Secondary */,

            // "tab.activeBackground":   "#232525" /* BG.Primary */,
            // "tab.activeBorder":       "#232525" /* BG.Primary */,
            // "tab.inactiveBackground": "#1a1d1d" /* BG.Secondary */,
        }
    }
}
